{
    "compilerOptions": {
      "target": "ES2016",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "**/__tests__/*", "dist"]
}